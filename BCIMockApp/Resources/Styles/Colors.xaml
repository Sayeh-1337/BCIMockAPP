<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Light Theme Colors -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <!-- Dark Theme Colors -->
    <Color x:Key="PrimaryDarkTheme">#7955E8</Color>
    <Color x:Key="SecondaryDarkTheme">#473599</Color>
    <Color x:Key="TertiaryDarkTheme">#9588D3</Color>
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="SurfaceDark">#1E1E1E</Color>
    <Color x:Key="CardBackgroundDark">#2D2D2D</Color>

    <!-- Common Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Signal Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Danger">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- BCI Wave Colors -->
    <Color x:Key="DeltaWave">#8E44AD</Color>
    <Color x:Key="ThetaWave">#3498DB</Color>
    <Color x:Key="AlphaWave">#2ECC71</Color>
    <Color x:Key="BetaWave">#E74C3C</Color>
    <Color x:Key="ConcentrationLevel">#FF9800</Color>

    <!-- Theme-aware brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDarkTheme}}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDarkTheme}}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource TertiaryDarkTheme}}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource BackgroundDark}}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource SurfaceDark}}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundDark}}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    
    <!-- Signal Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
    
    <!-- BCI Wave Brushes -->
    <SolidColorBrush x:Key="DeltaWaveBrush" Color="{StaticResource DeltaWave}"/>
    <SolidColorBrush x:Key="ThetaWaveBrush" Color="{StaticResource ThetaWave}"/>
    <SolidColorBrush x:Key="AlphaWaveBrush" Color="{StaticResource AlphaWave}"/>
    <SolidColorBrush x:Key="BetaWaveBrush" Color="{StaticResource BetaWave}"/>
    <SolidColorBrush x:Key="ConcentrationLevelBrush" Color="{StaticResource ConcentrationLevel}"/>
</ResourceDictionary>